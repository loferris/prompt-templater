# AI Prompt Builder Environment Configuration
# Copy this file to .env.local and fill in your actual API keys

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-32-character-string

# Database Configuration (choose one)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_prompt_builder
# DATABASE_URL=mysql://user:password@localhost:3306/ai_prompt_builder
# DATABASE_URL=sqlite:./data/ai_prompt_builder.db

# Notion API (optional - for template imports/exports)
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Airtable API (optional - for template storage and management)
# Get from: https://airtable.com/developers/web/api/introduction
# Personal Access Token from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=patxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AIRTABLE_BASE_ID=appxxxxxxxxxxxxxxx
AIRTABLE_TABLE_NAME=Templates

# OpenRouter API (required for AI enhancements - unified access to multiple LLMs)
# Get from: https://openrouter.ai/keys
# Available models: anthropic/claude-3.5-sonnet, openai/gpt-4o-mini, google/gemini-pro, etc.
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_MAX_TOKENS=2000
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Image Generation APIs (optional)
# Midjourney API - Get from your Midjourney provider
MIDJOURNEY_API_KEY=your-midjourney-api-key
MIDJOURNEY_BASE_URL=https://api.midjourney.com/v1

# Stability AI (Stable Diffusion) - Get from: https://platform.stability.ai/
STABILITY_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STABILITY_BASE_URL=https://api.stability.ai

# Flux AI - Get from your Flux provider
FLUX_API_KEY=your-flux-api-key
FLUX_BASE_URL=https://api.flux.ai

# Rate Limiting (adjust based on your API limits)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Development Settings
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info

# Feature Flags (enable/disable features)
ENABLE_AI_ENHANCEMENT=true
ENABLE_IMAGE_GENERATION=true
ENABLE_TEMPLATE_EXPORT=true
ENABLE_ANALYTICS=false